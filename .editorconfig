# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab

[{*.sh, gradlew}]
end_of_line = lf

[{*.bat, *.cmd}]
end_of_line = crlf

[{*.hs, *.yaml}]
indent_style = space
indent_size = 2
